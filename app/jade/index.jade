doctype
html(ng-app="instagramModule")
  head
    meta(charset='utf-8')
    link(href="bower_components/fancybox/source/jquery.fancybox.css",rel="stylesheet")
    link(href="bower_components/reset-css/reset.css",rel="stylesheet")
    link(href="css/build.min.css",rel="stylesheet")
    script(src="bower_components/jquery/dist/jquery.min.js")
    script(src="bower_components/fancybox/source/jquery.fancybox.js")
    script(src="bower_components/angular/angular.js")
    script(src="https://code.angularjs.org/1.5.0/angular-route.min.js")
    script(src="js/race.js")
    script(src="js/main.js")



  body(ng-controller="UserCtrl")

    .wrapper
      .header
        
      
        a.header__home.home(href="#")
          img.home__image(alt="home",src="img/home_icon.png",width="30",height="27")

        div.header__logo.logo
          img.logo__image(alt="logo",src="img/logo.png")
        
        
        
        a.header__ava.ava(href="https://api.instagram.com/oauth/authorize/?client_id=5429d8c938fd43058043dfa7e6a13b15&redirect_uri=http://localhost:8080&response_type=token")
          img.ava__image(alt="avatar",src="img/login.png")

      div.header__search.search(ng-controller="SearchCtrl")
        form(ng-submit="searchUser()")
          input(type="text",placeholder="Search User",ng-model="nameSearch")
          input(type="submit",value="Отправить")

      .content




        .sidebar
            div.sidebar__user-info.user-info
              .user-info__top
                img.user-info__avatar.ava__image.ava__image--big(src="{{me.profile_picture}}")
                h3.user-info__nickname {{me.username}}
                //span.user-info__miny-description Riley, the Parson Dog
                p.user-info__description {{me.bio}}
                  
                a.user-info__button.user-info__button--following(href="#") Following
              
              div.user-info__statistics
                div.user-info__followers.followers
                  span.followers__count  {{me.counts.followed_by}}
                  br
                  span.followers__cap Followers
                div.user-info__following.following
                  span.following__count {{me.counts.follows}}
                  br
                  span.following__cap Following
                  
                  
                .clearfix
              
              div.user-info__private-site.private-site
                span.private-site__block 
                  a.private-site__link(href="http://vk.com") {{me.website}}
          
          
            div.sidebar__recommended.recommended
              h3.recommended__title Also recommended
              ul.recommended__list
                li.recommended__item
                  div.recommended__ava
                    img.recommended__image(alt="avatar",src="img/avatar.jpg")
                  a.recommended__user
                    span.recommended__name Kostya
                    br
                    span.recommended__description Pro developer 100lvl
                  div.clearfix
                li.recommended__item
                  div.recommended__ava
                    img.recommended__image(alt="avatar",src="img/avatar.jpg")
                  a.recommended__user
                    span.recommended__name Kostya
                    br
                    span.recommended__description Pro developer 100lvl
                  div.clearfix
                li.recommended__item
                  div.recommended__ava
                    img.recommended__image(alt="avatar",src="img/avatar.jpg")
                  a.recommended__user
                    span.recommended__name Kostya
                    br
                    span.recommended__description Pro developer 100lvl
                  div.clearfix
                  
                
          
           
            
          
          
        .main
          div.main__panel.panel
            h2.panel__title
              span.panel__count-post {{photos.length}}
              &nbsp;
              b POSTS
            
            div.panel__burger-line.burger-line
            div.panel__burger-square.burger-square
            .clearfix
              
          div.main__boxes.boxes
            div.boxes__item(ng-repeat="photo in photos")
              a.boxes__link(href="{{photo.images.standard_resolution.url}}",fancybox=)
                img.boxes__image(src="{{photo.images.low_resolution.url}}")

        .clearfix
